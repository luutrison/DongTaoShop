                                                                    <input class="form-control form-control-lg" type="text" style="width: 100%;" name="phuong" required="">

                                                                }
                                                                else
                                                                {
                                                                    <input class="form-control form-control-lg" type="text" style="width: 100%;" value="@user.Phuong" name="phuong" required="">


                                                                }
                                                            </div>
