@using DongTaoShop.Models
@{
    ViewBag.Title = "Hồ sơ | Đông Tảo Shop - Chợ nông sản online của người Việt";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TaiKhoan user = (TaiKhoan)TempData["UserProfile"];
    string date = null;
